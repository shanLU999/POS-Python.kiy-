<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (0.19,0.32,0.23,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Sales POS System'
            size_hint_x: 0.9
            bold: True
            color: (1,1,1,1)
        FlatButton:
            id: loggedin_user
            size_hint_x: 0.1
            text: 'Shan'
            color: (1,1,1,1)

    BoxLayout:
        id: current
        size_hint_y:None
        height: 50
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text:'Current Item'
            background_normal:''
            background_color: (0.06,0.32,0.32,1)
            size_hint_x:0.2
        Button:
            id: cur_product
            text:'Defualt Product'
            background_normal:''
            background_color: (0.06,0.4,0.4,1)
            size_hint_x:0.7
        Button:
            id: cur_price
            text: '0.00'
            background_normal:''
            background_color: (0.06,0.65,0.65,1)
            size_hint_x:0.1

    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: 'vertical'
            size_hint_x: 0.8
            spacing: 10

            BoxLayout:
                id: product_label
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (0.06,0.45,0.45,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos

                FlatButton:
                    text: 'Qty'
                    size_hint_x: 0.1
                FlatButton:
                    text: 'Product Code'
                    size_hint_x: 0.3
                FlatButton:
                    text: 'Disc'
                    size_hint_x: 0.1
                FlatButton:
                    text: 'Disc %'
                    size_hint_x: 0.1
                FlatButton:
                    text: 'GST'
                    size_hint_x: 0.1
                FlatButton:
                    text: 'Price'
                    size_hint_x: 0.1
                FlatButton:
                    text: 'Product Total'
                    size_hint_x: 0.2



            BoxLayout:
                id: product_input
                size_hint_y: None
                height: 30
                spacing: 5
                TextInput:
                    id: qty_inp
                    size_hint_x: 0.1
                TextInput:
                    id: code_inp
                    size_hint_x: 0.3
                    multiline: False
                    on_text_validate: root.update_purchases()
                TextInput:
                    id: disc_inp
                    size_hint_x: 0.1
                TextInput:
                    id: disc_perc_inp
                    size_hint_x: 0.1
                TextInput:
                    id: vat_inp
                    size_hint_x: 0.1
                TextInput:
                    id: price_inp
                    size_hint_x: 0.1
                TextInput:
                    id: total_inp
                    size_hint_x: 0.2

            BoxLayout:
                id: add_to_cart
                orientation:'vertical'
                BoxLayout:
                    size_hint_y:None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (0.06,0.45,0.45,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: 0.25
                    Label:
                        text: 'Product name'
                        size_hint_x: 0.3
                    Label:
                        text: 'Qty'
                        size_hint_x: 0.1
                    Label:
                        text: 'Disc'
                        size_hint_x: 0.1
                    Label:
                        text: 'Price'
                        size_hint_x: 0.1
                    Label:
                        text: 'Price Tota'
                        size_hint_x:0.15

                GridLayout:
                    id: products
                    cols: 1




        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: 0.2

            TextInput:
                id: receipt_preview
                readonly: True
                text: 'Wind Cease Pty Ltd\nToorak Road,\nCamberwell,\nTel: (6669) \nReceipt No: \nDate: \n\n'
